<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    
    <changeSet id="changelog2-1.0" author="israelmorales">
        <tagDatabase tag="version_2.0" />
    </changeSet>

    <changeSet author="israelmorales" id="changelog2-2.0">
        <createTable tableName="address">
            <column name="idaddress" type="int">
                <constraints nullable="true" primaryKey="false" unique="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet author="israelmorales" id="changelog2-3.0">
        <addColumn tableName="address">
            <column name="numero" type="int"></column>
        </addColumn>
    </changeSet>

    <changeSet author="israelmorales" id="changelog2-4.0">
        <addColumn tableName="address">
            <column name="calle" type="varchar(50)"></column>
        </addColumn>
    </changeSet>

    <changeSet author="israelmorales" id="changelog2-5.0">
        <addColumn tableName="address">
            <column name="colonia" type="varchar(50)"></column>
        </addColumn>
    </changeSet>

    <changeSet author="israelmorales" id="changelog2-6.0">
        <addColumn tableName="address">
            <column name="codigopostal" type="varchar(50)"></column>
        </addColumn>
    </changeSet>

    <changeSet author="israelmorales" id="changelog2-7.0">
        <addColumn tableName="address">
            <column name="delegacion" type="varchar(50)"></column>
        </addColumn>
    </changeSet>
</databaseChangeLog>